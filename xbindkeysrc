"scrot -d 2 -q 90 -e 'mv $f ~/img/screenshots/sort'"
    Print

#
# lock
#

"mpc pause; xlock -mode blank"
    F12

#
# audio
#

"mpc toggle"
    F11

"mpc toggle"
    XF86AudioPlay

"mpc next"
    XF86AudioNext

"mpc prev"
    XF86AudioPrev

"amixer set Master playback 5%+"
    XF86AudioRaiseVolume

"amixer set Master playback 5%-"
    XF86AudioLowerVolume

"amixer set Master mute"
    XF86AudioMute

#
# backlight
#

"xbacklight -dec 1"
    XF86MonBrightnessDown

"xbacklight -inc 1"
    XF86MonBrightnessUp

"xbacklight -dec 10"
    XF86KbdBrightnessDown

"xbacklight -inc 10"
    XF86KbdBrightnessUp
