#
# lock
#

"mpc pause; xlock -mode blank"
    F12

#
# audio
#

"mpc toggle"
    F11

"amixer set Master playback 5%+"
    XF86AudioRaiseVolume

"amixer set Master playback 5%-"
    XF86AudioLowerVolume

"amixer set Master mute"
    XF86AudioMute

#
# backlight
#

"xbacklight -dec 10"
    XF86MonBrightnessDown

"xbacklight -inc 10"
    XF86MonBrightnessUp

"kbdlight up"
    XF86KbdBrightnessUp

"kbdlight down"
    XF86KbdBrightnessDown

